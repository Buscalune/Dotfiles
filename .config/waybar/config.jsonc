{
    "layer": "top",
    "margin-top": 0,
    "margin-right": 10,
    "margin-bottom": 0,
    "margin-left": 10,
    "modules-left": [
        "hyprland/workspaces",
        "mpris"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "pulseaudio",
        "backlight",
        "network",
        "battery",
        "custom/power"
